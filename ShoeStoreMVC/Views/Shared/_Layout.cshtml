
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WalkWise</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom Aesthetic Styles -->
    <style>
        body {
            background: linear-gradient(to bottom right, #f8f9fa, #e2eafc);
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar-custom {
            background-color: #2b2d42;
        }

            .navbar-custom .nav-link {
                color: #f8f9fa;
                transition: 0.3s ease-in-out;
            }

                .navbar-custom .nav-link:hover {
                    color: #a8dadc;
                    transform: scale(1.05);
                }


        .navbar-brand {
            color: #a8dadc !important;
            font-weight: bold;
            font-size: 1.4rem;
        }


        .navbar-toggler {
            border-color: #ffd166;
        }

        footer {
            background-color: #2b2d42;
            color: #f8f9fa;
        }

            footer a {
                color: steelblue;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .btn-glow {
            background-color: #ef476f;
            border: none;
            color: white;
            transition: all 0.3s ease-in-out;
            border-radius: 50px;
        }

            .btn-glow:hover {
                background-color: #d63a61;
                box-shadow: 0 0 10px #ef476f;
            }
    </style>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoeStoreMVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-check-fill"></i> WalkWise
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-light"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="bi bi-box-seam me-1"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main role="main" class="flex-grow-1 py-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-center py-4 mt-auto">
        <div class="container">
            &copy; 2025 - <strong>WalkWise</strong> |
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
