@model ProductDto

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-4 shadow-sm bg-light">
            <h2 class="text-center text-primary mb-4">🆕 Add New Product</h2>

            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Brand</label>
                    <input class="form-control" asp-for="Brand" placeholder="Enter brand name" />
                    <span asp-validation-for="Brand" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Category</label>
                    <select class="form-select" asp-for="Category">
                        <option disabled selected value="">-- Select Category --</option>
                        <option value="Casual">Casual</option>
                        <option value="Formal">Formal</option>
                        <option value="Sports">Sports</option>
                        <option value="Loafer">Loafer</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Price (₹)</label>
                    <input type="number" class="form-control" asp-for="Price" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Product details..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Product Image</label>
                    <input type="file" class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Submit
                    </button>
                    <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
